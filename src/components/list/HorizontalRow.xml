<?xml version='1.0' encoding='utf-8'?>
<component
    name='HorizontalRow'
    extends='mv_BaseView'>

  <interface>
    <field
        id='content'
        type='node' />
    <field
        id='owner'
        type='node' />
    <field
        id='index'
        type='integer' />
    <field
        id='animateToItem'
        type='integer'
        value='0' />
    <field
        id='isOnScreen'
        type='boolean'
        alwaysNotify='false'
        value='false' />
    <field
        id='isHidden'
        type='boolean'
        value='false' />
    <field
        id='viewState'
        type='string'
        alwaysNotify='true' />

    <field
        id='itemFocused'
        type='integer'
        value='0' />
    <field
        id='itemUnfocused'
        type='integer' />
    <field
        id='itemSelected'
        type='integer' />
    <field
        id='currTargetSet'
        type='array' />
    <field
        id='defaultTargetSetFocusIndex'
        type='integer'
        value='0' />
    <field
        id='currFocusItemIndex'
        type='integer' />
    <field
        id='height'
        type='integer' />

  </interface>

  <children>
    <Label
        id='header'
        text='header'
        color='#cccccc' />
    <Group
        id='cellHolder'
        translation='[0,20]' />

    <Animation
        id='moveAnimation'
        duration='0.1'
        repeat='false'
        control='stop'
        easeFunction='linear'>
      <Vector2DFieldInterpolator
          id='moveAnimationInterpolator'
          key='[0.0, 1.0]'
          keyValue='[ [0, 20], [0, 20] ]'
          fieldToInterp='cellHolder.translation' />
    </Animation>
  </children>

</component>