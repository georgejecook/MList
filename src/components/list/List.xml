<?xml version='1.0' encoding='utf-8'?>
<component
    name='List'
    extends='mv_BaseView'>
  <interface>
    <field
        id='content'
        type='node'
        value='invalid' />
    <field
        id='focusSettings'
        type='node' />
    <field
        id='settings'
        type='node' />

    <field
        id='rowSettings'
        type='node' />

    <field
        id='width'
        type='float'
        value='1920' />
    <field
        id='height'
        type='float'
        value='1080' />
    <!-- indicates what to set a row to when it's considered hidden (hidden|partial) -->
    <field
        id='rowHidingMode'
        value='hidden'
        type='string' />
    <field
        id='animateToRow'
        type='integer'
        value='0' />
    <field
        id='rowFocused'
        type='integer' />
    <field
        id='itemFocused'
        type='integer' />
    <field
        id='itemUnfocused'
        type='integer' />
    <field
        id='itemSelected'
        type='integer' />
    <field
        id='currFocusItemIndex'
        type='integer' />
    <field
        id='_focusedRenderer'
        type='node' />
    <field
        id='isHidden'
        type='boolean'
        onChange='isHiddenChange' />
    <function name='getBoundsForIndex' />
    <function name='getFocusedBounds' />

  </interface>
  <children>
    <Timer
        id='setInitialTimer'
        duration='0.1' />
    <Timer
        id='focusTimer'
        duration='0.01'
        control='start'
        repeat='true' />
    <Group id='rowsGroup' />
    <Rectangle
        id='overlay'
        color='#ff0000'
        visible='true'
        opacity='0.5' />

    <Animation
        id='moveAnimation'
        duration='0.1'
        repeat='false'
        control='stop'
        easeFunction='linear'>
      <Vector2DFieldInterpolator
          id='moveAnimationInterpolator'
          key='[0.0, 1.0]'
          keyValue='[ [0, 60], [0, 606] ]'
          fieldToInterp='rowsGroup.translation' />
    </Animation>
  </children>

</component>