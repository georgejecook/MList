<?xml version='1.0' encoding='utf-8'?>
<component
    name='SmartLabel'
    extends='Group'>
  <interface>
    <field
        id='text'
        type='string' />
    <field
        id='values'
        type='assocarray' />
    <field
        id='width'
        type='float' />
    <field
        id='horizAlignment'
        type='string'
        value='left' />
    <field
        id='vertAlignment'
        type='string'
        value='bottom' />
    <field
        id='fontSettings'
        type='assocarray' />

    <field
        id='header1FontSettings'
        type='assocarray' />

    <field
        id='header2FontSettings'
        type='assocarray' />

    <field
        id='header3FontSettings'
        type='assocarray' />

    <field
        id='italicFontSettings'
        type='assocarray' />

    <field
        id='boldFontSettings'
        type='assocarray' />

    <function name='updateFontSetting' />
  </interface>

  <children>
    <LayoutGroup id='contentGroup' />
  </children>
</component>