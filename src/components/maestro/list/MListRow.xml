<?xml version='1.0' encoding='utf-8' ?>
<component
    name='MListRow'
    extends='BaseView'>

  <interface>
    <field
        id='index'
        type='integer' />
    <!-- fixed|floating|focusWrap|zoom|custom -->
    <field
        id='focusType'
        value='fixed'
        type='string' />
    <field
        id='isHidden'
        type='boolean'
        value='false'
        onChange='onIsHiddenChange' />
    <field
        id='content'
        type='node'
        onChange='onContentChange' />
    <field
        id='viewState'
        type='string'
        onChange='onViewStateChange'
        alwaysNotify='true' />

    <field
        id='cellSize'
        type='floatArray'
        value='[300,300]' />
    <field
        id='cellSpacing'
        type='floatArray'
        value='[20,20]' />
    <field
        id='numCols'
        type='integer'
        value='12' />
    <field
        id='focusIndexOffset'
        type='integer'
        value='0' />
    <field
        id='unfocusCellScale'
        type='float'
        value='0.5' />
    <field
        id='unfocusCount'
        type='float'
        value='3' />

    <field
        id='itemFocused'
        alias='list.itemFocused' />
    <field
        id='itemUnfocused'
        alias='list.itemUnfocused' />
    <field
        id='itemSelected'
        alias='list.itemSelected' />
    <field
        id='currTargetSet'
        alias='list.currTargetSet' />
    <field
        id='defaultTargetSetFocusIndex'
        alias='list.defaultTargetSetFocusIndex'
        value='0' />
    <field
        id='currFocusItemIndex'
        alias='list.currFocusItemIndex'
        onChange='onCurrFocusItemIndexChange' />

  </interface>

  <children>
    <Label id='header' text="header"/>
    <TargetList id='list' translation='[0,20]'    />
  </children>

</component>