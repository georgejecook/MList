<?xml version='1.0' encoding='utf-8' ?>

<component
    name='TargetListFocusTestScene'
    extends='Group'>

  <script
      type='text/brightscript'
      uri='scene.brs' />
  <interface>
    <field
        id='_debugM'
        type='boolean'
        onChange='onDebugMChange'
        alwaysNotify='true' />
    <field
        id='_cellProvider'
        type='node' />
    <field
        id='_cellTracker'
        type='node' />
    <field
        id='_defaultCellType'
        type='string'
        value='ComplexCell' />
    <field
        id='_numberOfRows'
        type='integer'
        value='4' />
    <field
        id='_addTypeOnes'
        type='integer'
        onChange='onAddTypeOnes'
        alwaysNotify='true' />
    <field
        id='_addTypeComplex'
        type='integer'
        onChange='onAddComplex'
        alwaysNotify='true' />
    <field
        id='_addTypeTwos'
        type='integer'
        onChange='onAddTypeTwos'
        alwaysNotify='true' />
    <field
        id='_removeItems'
        type='integer'
        onChange='onRemove'
        alwaysNotify='true' />
    <field
        id='_showRowItems'
        type='integer'
        onChange='onShowRow'
        alwaysNotify='true' />
    <field
        id='_hideRowItems'
        type='integer'
        onChange='onHideRow'
        alwaysNotify='true' />
    <field
        id='_showItems'
        type='integer'
        onChange='onShow'
        alwaysNotify='true' />
    <field
        id='_hideItems'
        type='integer'
        onChange='onHide'
        alwaysNotify='true' />
    <field
        id='_prebakeCellOnes'
        type='integer'
        value='10' />
    <field
        id='_prebakeCellTwos'
        type='integer'
        value='10' />
    <field
        id='_prebakeCellComplex'
        type='integer'
        value='130' />
    <field
        id='_addTypeOnePrebakes'
        type='integer'
        onChange='onAddTypeOnePrebakes'
        alwaysNotify='true' />
    <field
        id='_addTypeTwoPrebakes'
        type='integer'
        onChange='onAddTypeTwoPrebakes'
        alwaysNotify='true' />

    <field
        id='_reset'
        type='boolean'
        onChange='onResetChange'
        alwaysNotify='true' />

    <field
        id='_m'
        type='assocarray' />

  </interface>
  <children>
    <Group id='listHolder' />
    <Rectangle
        color='#ff0000'
        width='1920'
        height='100'
        translation='[0, 900]' />
    <Label
        id='infoLabel'
        translation='[50, 920]'
        color='#ffffff' />
  </children>

</component>