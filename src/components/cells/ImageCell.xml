<?xml version='1.0' encoding='utf-8' ?>

<component
    name='Imagecell'
    extends='Group'>

  <!-- Note that target and rect are both set during the interpolation -->
  <interface>
    <field
        id='index'
        type='int' />
    <field
        id='groupHasFocus'
        type='boolean'/>
    <field
        id='itemContent'
        type='node'
        onChange='itemContentChanged' />
    <field
        id='currTarget'
        type='float'
        onChange='currTargetChanged' />
    <field
        id='currRect'
        type='rect2d' />
    <field
        id='focusPercent'
        type='float' />
  </interface>


  <children>
    <Rectangle
        id='theRect'
        color='0x00002080'>
    </Rectangle>
    <Poster
        id='poster'
        translation='[0,0]'
        loadingBitmapUri='http://via.placeholder.com/370x300'
        uri='http://via.placeholder.com/370x300'
        loadWidth='370'
        loadHeight='300'
        width='370'
        height='300'
        loadDisplayMode='scaleToFit' />
