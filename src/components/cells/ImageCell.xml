        id='poster2'
        translation='[100,50]'
        loadWidth='150'
        loadHeight='100'
        width='150'
        height='200'
        loadDisplayMode='scaleToFit' /> -->
    <!-- <Label
        id='theLabel'
        width='350'
        horizontalAlign='center'
        translation='[10, 10]' /> -->

  </children>

</component>