{
  "name": "maestro-roku-list",
  "version": "0.1.0",
  "description": "A development platform for building roku channels in brighterscript. List component",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*",
    "!roku_modules"
  ],
  "dependencies": {
    "log": "file:../roku-log",
    "mc": "file:../maestro-roku-core",
    "mv": "file:../maestro-roku-view"
  },
  "devDependencies": {
    "brighterscript": "^0.15.0",
    "ropm": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-list.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-list/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-list#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist"
  },
  "scripts": {
    "build": "npx bsc",
    "test": "cd tests && npx ropm copy && bsc --project ./bsconfig.json"
  }
}
